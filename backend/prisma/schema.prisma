generator client {
  provider = "prisma-client"
  // Generate the client into the project's .prisma directory so @prisma/client can initialize correctly
  output = "../.prisma/client"
  // Ask Prisma to emit transpiled JS files alongside TS so Node can require them
  transpile = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String?
  email String @unique
}